{
  "version": "2.0.0",
  "tasks": [
    {
      "label": " 全てのローカルサーバ起動",
      "type": "shell",
      "command": "echo サーバ起動中...",
      "dependsOrder": "parallel",
      "dependsOn": [
        "クライアント(React)サーバ起動",
        "バックエンド(API)サーバ起動(MySQLサーバとセットで起動すること)",
        "MySQLサーバ起動"
      ],
      "problemMatcher": []
    },
    {
      "label": "クライアント(React)サーバ起動",
      "type": "shell",
      "command": "npm start --prefix=${workspaceFolder}\\client;"
    },
    {
      "label": "バックエンド(API)サーバ起動(MySQLサーバとセットで起動すること)",
      "type": "shell",
      "command": "npx ts-node ${workspaceFolder}\\backend\\app\\App.ts",
      "problemMatcher": []
    },
    {
      "label": "MySQLサーバ起動",
      "type": "docker-compose",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true,
          "services": ["db"]
        },
        "files": [
          "${workspaceFolder}\\reversi-db\\docker-compose.yml"
        ]
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "MySQLサーバ終了",
      "type": "docker-compose",
      "dockerCompose": {
        "down": {},
        "files": [
          "${workspaceFolder}\\reversi-db\\docker-compose.yml"
        ]
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "初回環境構築 全部セット(Windows)",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "初回環境構築-Reactサーバ(Windows)",
        "初回環境構築-APIサーバ(Windows)",
        "初回環境構築-DBサーバ",
        "MySQLサーバ終了"
      ],
      "presentation": {
        "showReuseMessage": false,
        "clear": false,
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "初回環境構築 全部セット(Mac)",
      "type": "shell",
      "dependsOrder": "sequence",
